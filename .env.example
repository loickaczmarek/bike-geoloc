# ========================================
# ENVIRONMENT CONFIGURATION - BIKE GEOLOC
# ========================================
# Copy to .env.local and configure for your environment
# NEVER commit .env.local to git (contains secrets)

# ========================================
# ENVIRONMENT
# ========================================
# Options: development | staging | production | test
VITE_APP_ENV=development
NODE_ENV=development

# ========================================
# APPLICATION
# ========================================
VITE_APP_NAME=Bike Geoloc
VITE_APP_VERSION=1.0.0
PORT=5173

# ========================================
# API CONFIGURATION
# ========================================
# CityBikes API
VITE_CITYBIKES_API_URL=https://api.citybik.es/v2
VITE_API_TIMEOUT=5000
VITE_API_RETRIES=3

# ========================================
# FRONTEND
# ========================================
VITE_FRONTEND_URL=http://localhost:5173
VITE_ENABLE_ANALYTICS=false

# ========================================
# LOGGING
# ========================================
# Levels: debug | info | warn | error
# Use 'info' or 'warn' in production for performance
VITE_LOG_LEVEL=debug

# Pretty logs (human-readable) vs JSON logs (machine-readable)
# Set to false in production for structured logging
VITE_LOG_PRETTY=true

# Enable console logging
VITE_LOG_CONSOLE=true

# ========================================
# SECURITY
# ========================================
# CORS Origins (comma-separated)
# Example production: https://bike-geoloc.com,https://www.bike-geoloc.com
# IMPORTANT: Never use * in production
VITE_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
# Window in milliseconds (default: 60000 = 1 minute)
VITE_RATE_LIMIT_WINDOW_MS=60000

# Max requests per window (default: 100)
VITE_RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# FEATURE FLAGS
# ========================================
# Enable auto-refresh of stations (every 60s)
VITE_FEATURE_AUTO_REFRESH=true

# Enable analytics (Google Analytics, Mixpanel, etc.)
VITE_FEATURE_ANALYTICS=false

# Enable error reporting (Sentry, Rollbar, etc.)
VITE_FEATURE_ERROR_REPORTING=false

# ========================================
# GEOLOCATION CONFIGURATION
# ========================================
# Search radius in meters (strict)
VITE_SEARCH_RADIUS_METERS=200

# Maximum stations to display
VITE_MAX_STATIONS=10

# Geolocation timeout (milliseconds)
VITE_GEOLOCATION_TIMEOUT=10000

# Enable high accuracy GPS (uses more battery)
VITE_GEOLOCATION_HIGH_ACCURACY=true

# ========================================
# EXTERNAL SERVICES (when implemented)
# ========================================
# Sentry (Error Reporting)
# VITE_SENTRY_DSN=https://your-key@sentry.io/project-id
# VITE_SENTRY_ENVIRONMENT=development

# Google Analytics
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# ========================================
# PRODUCTION EXAMPLE
# ========================================
# For production deployment, use:
#
# VITE_APP_ENV=production
# NODE_ENV=production
# VITE_LOG_LEVEL=info
# VITE_LOG_PRETTY=false
# VITE_CORS_ORIGINS=https://your-domain.com
# VITE_FEATURE_ERROR_REPORTING=true
# VITE_FEATURE_ANALYTICS=true
